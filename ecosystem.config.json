{
    "apps": [
        {
            "name": "crova-backend",
            "script": "./server.js",
            "instances": "max",
            "exec_mode": "cluster",
            "autorestart": true,
            "watch": false,
            "max_memory_restart": "1G",
            "env": {
                "NODE_ENV": "development",
                "PORT": 8080
            },
            "env_production": {
                "NODE_ENV": "production",
                "PORT": 8080
            },
            "log_date_format": "YYYY-MM-DD HH:mm:ss",
            "error_file": "./logs/error.log",
            "out_file": "./logs/out.log",
            "merge_logs": true,
            "time": true
        }
    ]
}